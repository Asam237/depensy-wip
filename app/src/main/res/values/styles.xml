<resources>
    <style name="ExpenseManagerTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant_dark</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorError">@color/color_error</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:statusBarColor">@color/color_status_bar</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar</item>

        <!-- Type attributes -->
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="textAppearanceHeadline6">@style/ExpenseManagerTextAppearance.Headline6</item>
        <item name="textAppearanceButton">@style/ExpenseManagerTextAppearance.Button</item>

        <!-- Shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/ExpenseManagerShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ExpenseManagerShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ExpenseManagerShapeAppearance.LargeComponent</item>
        <!-- Widget style attributes -->
        <item name="bottomNavigationStyle">@style/ExpenseManagerBottomNavigationView</item>

        <item name="textInputStyle">@style/ExpenseManagerTextInputLayout</item>
        <item name="materialCardViewStyle">@style/ExpenseManagerCardView</item>
        <item name="chipStyle">@style/ExpenseManagerChip</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:progressBarStyle">@style/ExpenseManagerProgressBar</item>
        <item name="snackbarStyle">@style/ExpenseManagerSnackbar</item>
    </style>

    <style name="AutoSizeText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">7sp</item>
    </style>

    <style name="BottomNavActive">
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="BottomNavInactive">
        <item name="android:fontFamily">@font/nunito_sans</item>
    </style>

    <style name="ExpenseManagerTheme.Secondary">
        <item name="colorPrimary">@color/color_secondary</item>
        <item name="colorPrimaryVariant">@color/color_secondary_variant_dark</item>
    </style>

    <style name="ExpenseManagerTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar_launcher</item>
    </style>

    <style name="ExpenseManagerBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView" />

    <style name="ExpenseManagerTextAppearance.Headline6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_headline_6</item>
    </style>

    <style name="ExpenseManagerTextAppearance.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

    <style name="ExpenseManagerTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ExpenseManagerTextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/rajdhani</item>
    </style>

    <style name="ExpenseManagerTextAppearance.Subheader.Accent" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rajdhani</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="ExpenseManagerMaterialButton.TextButton.DoublePadding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">@dimen/spacing_double</item>
        <item name="android:paddingEnd">@dimen/spacing_double</item>
    </style>

    <style name="ExpenseManagerChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/ExpenseManagerTextAppearance.Chip</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="chipBackgroundColor">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
        <item name="closeIconTint">?attr/colorOnSecondary</item>
        <item name="chipIconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="ExpenseManagerTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="ExpenseManagerCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/elevation_card_view</item>
        <item name="cardBackgroundColor">@color/light_grey</item>
        <item name="strokeWidth">@dimen/size_border</item>
        <item name="strokeColor">@color/color_border</item>
    </style>

    <style name="ExpenseManagerProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/color_progress_bar</item>
    </style>

    <style name="ExpenseDateItemDecoration">
        <item name="android:width">@dimen/expense_date_header</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/padding_start_expense_date_header</item>
        <item name="android:paddingEnd">@dimen/padding_end_expense_date_header</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/rajdhani</item>
        <item name="datePaddingTop">@dimen/spacing_double</item>
        <item name="dayMonthTextSize">@dimen/text_size_expense_date_header_day_month</item>
        <item name="yearTextSize">@dimen/text_size_expense_date_header_year</item>
    </style>

    <style name="ExpenseSpaceItemDecoration">
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="paddingHorizontal">@dimen/padding_horizontal_expense_space</item>
    </style>

    <style name="ExpenseManagerSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
    </style>

    <style name="ExpenseManagerShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner</item>
    </style>

    <style name="ExpenseManagerShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner</item>
    </style>

    <style name="ExpenseManagerShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_corner</item>
    </style>

        <style name="InputForm.Field" parent="TextAppearance.MaterialComponents.Body1">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">@dimen/content_inset_quarter</item>
            <item name="android:singleLine">true</item>
            <item name="android:imeOptions">actionNext</item>
            <item name="android:layout_marginStart">-4dp</item>
            <item name="android:layout_marginEnd">-4dp</item>
        </style>

</resources>
